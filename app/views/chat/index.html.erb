<div class="chat">
  <div class="row">
    <div class="col-md-4 chat-list">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t "user" %></h3>
        </div>
        <div class="panel-body">
          <ul>
            <% @users.each do |user| %>
              <li><%= link_to user.email[0..5], conversations_path(user_id: user),
                remote: true, method: :post %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <ul id="conversations-list" class="conversations-list">
        <% @conversations.each do |conversation| %>
          <%= render "conversations/conversation",
            conversation: conversation, user: current_user %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
