<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @product.image_product.url{:medium} %>
    </div>
  </div>
  <div class="col-md-6">
    <h3>
      <%= @product.title %>
    </h3>
    <p>
      <%= number_to_currency @product.price %>
    </p>
    <p>
      <%= @product.content %>
    </p>
    <% if user_signed_in? %>
      <% if user_product %>
        <p>
          <%= link_to t(".edit"), edit_product_path(@product) %>
        </p>
      <% else %>
        <%= link_to t(".buy_now"), new_product_path(@product) %>
      <% end %>
    <% end %>
      <%= link_to t(".back"), root_path %>
  </div>
</div>
