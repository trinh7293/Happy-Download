<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @product.image_product.url{:medium} %>
    </div>
  </div>
  <div class="col-md-6">
    <h3>
      <%= @product.title %>
    </h3>
    <p>
      Quality  : <%= rating_for @product, "quality", star: 5, disable_after_rate: false, enable_half: true %>
    </p>
    <p>
      <%= number_to_currency(@product.price) %>
    </p>
    <p>
      <%= @product.content %>
    </p>
    <% if user_signed_in? %>
      <% if user_product %>
        <p>
          <%= link_to t(".edit_product"), edit_product_path(@product) %>
        </p>
      <% else %>
        <p>
          <%= link_to t(".buy_now"), new_product_path(@product) %>
        </p>
      <% end %>
    <% end %>
    <table>
      <thead>
        <tr>
          <th>Feedback</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% feedbacks = @product.feedbacks %>
        <% feedbacks.each do |feedback| %>
          <tr>
            <td><%= feedback.user.name %></td>
            <td><%= feedback.content %></td>
            <% if user_feedback feedback %>
            <td><%= link_to t(".delete"), feedback,
              method: :delete, data: {confirm: "Are you sure?"}   %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if user_signed_in?
      addfeedback = current_user.feedbacks.build %>
      <section>
        <%= render "feedback_form", addfeedback: addfeedback,
          product: @product %>
      </section>
    <% end %>
    <%= link_to t(".back"), root_path %>
    <br>
  </div>
</div>
