<% if @product.active? %>
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-6">
      <div class="thumbnail image-product center">
        <%= link_to image_tag(@product.image_product.url),
          product_path(@product) %>
      </div>
    </div>
    <div class="col-md-6">
      <h3><%= @product.title %></h3>
      <p>
        <%= t "quality" %><%= rating_for @product, Settings.rate.quality,
          star: Settings.rate.star_number, enable_half: true,
          disable_after_rate: false %></p>
      <p><%= number_to_currency @product.price %></p>
      <p><%= t "seller" %><%= @product.user.name %></p>
      <%= render "wishlist_form", product: @product, class: "wishlist-input"%>
      <p><%= @product.content %></p>
      <p><%= t "message_to" %>
      <%= link_to @product.user.email[0..5], chat_index_path %></p>


      <div class="buy-button">
        <% if user_product @product %>
          <p><%= link_to t("edit"), edit_product_path(@product),
              class: "btn btn-primary" %></p>
        <% else %>
          <p>
            <%= link_to t("buy_now"), new_product_order_detail_path(@product),
              class: "btn btn-primary" %>
          </p>
        <% end %>
      </div>
      <table class="div-create">
        <thead>
          <tr>
            <th><%= t "comment" %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= render @product.feedbacks %>
        </tbody>
      </table>
      <section>
        <div class="ajax-form-create">
          <%= render "feedbacks/feedback_form", feedback: @feedback,
            product: @product %>
        </div>
      </section>
      <%= link_to t("back"), root_path %>
      <br>
    </div>
  </div>
<% else %>
  <p><%= t ".product_no_longer_exists" %></p>
  <p><%= link_to t("back"), root_path %></p>
<% end %>
