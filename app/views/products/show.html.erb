<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @product.image_product.url{:medium} %>
    </div>
  </div>
  <div class="col-md-6">
    <h3>
      <%= @product.title %>
    </h3>
    <p>
      Quality  : <%= rating_for @product, "quality", star: 5,disable_after_rate: false, enable_half: true %>
    </p>
    <p>
      <%= number_to_currency(@product.price) %>
    </p>
    <p>
      <%= @product.content %>
    </p>
    <% if current_user != @product.user %>
      <p>
        <%= link_to t(".buy_now"), new_product_path(@product) %>
      </p>
    <% end %>
    <table>
      <thead>
        <tr>
          <th>Feedback</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <div class="div-create">
          <% feedbacks = @product.feedbacks %>
        </div>
        <% feedbacks.each do |feedback| %>
          <tr>
            <td><%= feedback.user.name %></td>
            <td><%= feedback.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <section class = "ajav-form-create">
    <%= render "feedback_form",feedback: @feedback,
      button_name: "Create feedback", addfeedback:
      @addfeedback, product: @product %>
    </section>
  </div>
</div>

<% if current_user == @product.user %>
  <%= link_to t(".edit"), edit_product_path(@product) %> |
<% end %>
<%= link_to t(".back"), root_path %>
<br>
